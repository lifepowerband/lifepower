<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.code85.lifepower">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".activities.LifePowerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.InformacoesActivity"
            android:label="@string/title_activity_informacoes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CadastroActivity"
            android:label="@string/title_activity_cadastro"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CadastroUsuarioActivity"
            android:label="@string/title_activity_cadastro_usuario"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ExibirDoencaActivity"
            android:label="@string/title_activity_exibir_doenca"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AdicionarDoencaActivity"
            android:label="@string/title_activity_adicionar_doenca"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>